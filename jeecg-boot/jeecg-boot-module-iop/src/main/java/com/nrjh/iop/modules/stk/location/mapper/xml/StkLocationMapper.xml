<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nrjh.iop.modules.stk.location.mapper.StkLocationMapper">

	<update id="updateTreeNodeStatus" parameterType="java.lang.String">
		update stk_location set has_child = #{status} where id = #{id}
	</update>
	<update id="deleteBatchByPid" parameterType="string">
		update stk_location set is_del = 1 where pid = #{pid}
	</update>
</mapper>
