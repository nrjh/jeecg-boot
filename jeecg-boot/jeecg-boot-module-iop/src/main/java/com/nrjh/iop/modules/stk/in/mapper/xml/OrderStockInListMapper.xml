<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nrjh.iop.modules.stk.in.mapper.OrderStockInListMapper">

    <delete id="deleteByMainId" parameterType="java.lang.String">
		DELETE
		FROM  order_stock_in_list
		WHERE
			 stock_order_id = #{mainId} 	</delete>

	<update id="deleteByStockOrderIdWithLogic" parameterType="string">
		UPDATE
			order_stock_in_list
		SET
			IS_DEL = 1
		WHERE
			IS_DEL = 0
		AND
			stock_order_id = #{stockOrderId}
	</update>

    <delete id="deleteByInOrderId" parameterType="java.lang.String">
		DELETE
		FROM  order_stock_in_list
		WHERE
			 stock_in_order_id = #{mainId} 	</delete>

    <select id="selectByMainId" parameterType="java.lang.String" resultType="com.nrjh.iop.modules.stk.in.entity.OrderStockInList">
		SELECT *
		FROM  order_stock_in_list
		WHERE
			is_del = 0
		AND
			 stock_order_id = #{mainId} 	</select>
</mapper>
